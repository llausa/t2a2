<p id="notice"><%= notice %></p>

<h1>Advice Replies</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Advice question</th>
      <th>Title</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advice_replies.each do |advice_reply| %>
      <tr>
        <td><%= advice_reply.user %></td>
        <td><%= advice_reply.advice_question %></td>
        <td><%= advice_reply.title %></td>
        <td><%= advice_reply.desc %></td>
        <td><%= link_to 'Show', advice_reply %></td>
        <td><%= link_to 'Edit', edit_advice_reply_path(advice_reply) %></td>
        <td><%= link_to 'Destroy', advice_reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

