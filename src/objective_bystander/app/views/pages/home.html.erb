<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<br>
<% if user_signed_in? %>
  <p><%= 'Hello, ' + current_user.username + '!' %></p>
  <p><%= 'Your role: ' + current_user.roles.first.name %></p>
  <%= link_to 'User Profile', user_profile_path %>
